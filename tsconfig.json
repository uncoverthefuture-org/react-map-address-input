{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "types": ["google.maps"],
    "rootDir": "./src",
    "outDir": "./lib"
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "**/__tests__/**"]
}